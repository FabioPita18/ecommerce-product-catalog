# =============================================================================
# E-Commerce Product Catalog - Environment Variables
# =============================================================================
# Copy this file to .env and fill in your values:
#   cp .env.example .env
#
# NEVER commit .env to version control!
# This file (.env.example) shows the required variables with safe defaults.
# =============================================================================


# =============================================================================
# Django Core Settings
# =============================================================================

# DEBUG: Enable debug mode (NEVER True in production!)
# - True: Detailed error pages, no caching, debug toolbar
# - False: Generic error pages, proper caching, production mode
DEBUG=True

# SECRET_KEY: Cryptographic signing key
# Used for: Session cookies, CSRF tokens, password reset tokens
# CRITICAL: Generate a unique key for production!
# Generate with: python -c "from django.core.management.utils import get_random_secret_key; print(get_random_secret_key())"
SECRET_KEY=your-secret-key-here-generate-a-real-one-for-production

# ALLOWED_HOSTS: Comma-separated list of valid Host headers
# Prevents HTTP Host header attacks
# Development: localhost,127.0.0.1
# Production: your-domain.com,www.your-domain.com
ALLOWED_HOSTS=localhost,127.0.0.1


# =============================================================================
# Database Configuration
# =============================================================================

# DATABASE_URL: PostgreSQL connection string
# Format: postgresql://USER:PASSWORD@HOST:PORT/DATABASE_NAME
#
# Docker Compose development (uses port 5435 to avoid conflicts):
DATABASE_URL=postgresql://ecommerce_user:ecommerce_password@localhost:5435/ecommerce_db

# If running inside Docker container (uses service name 'db' as host):
# DATABASE_URL=postgresql://ecommerce_user:ecommerce_password@db:5432/ecommerce_db
#
# To create the database locally:
#   createdb ecommerce_db
#   createuser ecommerce_user
#   psql -c "ALTER USER ecommerce_user WITH PASSWORD 'your_secure_password';"
#   psql -c "GRANT ALL PRIVILEGES ON DATABASE ecommerce_db TO ecommerce_user;"


# =============================================================================
# JWT Authentication Settings
# =============================================================================

# JWT_SECRET_KEY: Separate key for signing JWT tokens
# Can be the same as SECRET_KEY, but separate is more secure
# Generate with: openssl rand -hex 32
JWT_SECRET_KEY=your-jwt-secret-key-generate-with-openssl-rand

# ACCESS_TOKEN_LIFETIME: Minutes until access token expires
# Short-lived for security (15-60 minutes typical)
# Access tokens are sent with every API request
ACCESS_TOKEN_LIFETIME=60

# REFRESH_TOKEN_LIFETIME: Minutes until refresh token expires
# Long-lived (24 hours to 7 days typical)
# Used to get new access tokens without re-login
REFRESH_TOKEN_LIFETIME=1440


# =============================================================================
# CORS (Cross-Origin Resource Sharing) Settings
# =============================================================================

# CORS_ALLOWED_ORIGINS: Comma-separated origins that can access the API
# Frontend URLs that are allowed to make API requests
# Include protocol (http/https) and port if non-standard
#
# Development:
CORS_ALLOWED_ORIGINS=http://localhost:5173,http://127.0.0.1:5173

# Production (example):
# CORS_ALLOWED_ORIGINS=https://your-frontend-domain.com,https://www.your-frontend-domain.com


# =============================================================================
# Media Files (User Uploads)
# =============================================================================

# MEDIA_URL: URL prefix for serving uploaded files
MEDIA_URL=/media/

# MEDIA_ROOT: Filesystem path where uploads are stored
# Relative to BASE_DIR or absolute path
MEDIA_ROOT=media/


# =============================================================================
# Email Settings (for future features like password reset)
# =============================================================================

# EMAIL_BACKEND: How to send emails
# Development: console backend prints to terminal
# Production: smtp backend sends real emails
# EMAIL_BACKEND=django.core.mail.backends.console.EmailBackend

# SMTP Settings (uncomment for production)
# EMAIL_HOST=smtp.gmail.com
# EMAIL_PORT=587
# EMAIL_HOST_USER=your-email@gmail.com
# EMAIL_HOST_PASSWORD=your-app-password
# EMAIL_USE_TLS=True
# DEFAULT_FROM_EMAIL=noreply@your-domain.com
